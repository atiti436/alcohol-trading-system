{
  "name": "webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src",
    "test": "jest",
    "test:security": "jest src/tests/security/",
    "test:api": "jest src/tests/api/",
    "test:business": "jest src/tests/business/",
    "test:integration": "jest src/tests/integration/",
    "test:all": "jest src/tests/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:fields": "node scripts/check-field-naming.js",
    "check:permissions": "node scripts/check-permissions.js",
    "check:all": "npm run check:fields && npm run check:permissions",
    "seed:test": "npx tsx prisma/seeds/test-data.ts",
    "verify:isolation": "npx tsx -e \"import {verifyDataIsolation} from './prisma/seeds/test-data'; verifyDataIsolation().then(console.log).catch(console.error)\"",
    "deploy:check": "npm run check:all && npm run build && echo '✅ 部署前檢查完成'",
    "ci": "npm run lint && npm run check:all && npm run test:all && npm run build",
    "ci:fast": "npm run lint && npm run test:security && npm run build"
  },
  "dependencies": {
    "@ant-design/charts": "^2.6.4",
    "@google/generative-ai": "^0.21.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.16.2",
    "antd": "^5.21.7",
    "bcryptjs": "^2.4.3",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "next": "^14.2.32",
    "next-auth": "^4.24.8",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-dropzone": "^14.2.3",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.8.0",
    "@types/react": "18.2.25",
    "@types/react-dom": "18.2.11",
    "enhanced-resolve": "^5.15.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prisma": "^6.16.2",
    "tailwindcss": "^4",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  }
}
